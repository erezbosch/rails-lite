<% if flash['messages'] %>
  <p><%= flash['messages'] %></p>
<% end %>
<h1>ALL THE CATS</h1>
<% @cats.each do |cat| %>
  <p>
    <a href="/cats/<%= cat.id %>"><%= cat.name %></a>
    <% if cat.owner %>
      <%= " is owned by #{cat.owner.fname} #{cat.owner.lname}" %>
    <% else %>
      is a filthy stray! <a href="/cats/<%= cat.id %>/edit">Adopt</a>
    <% end %>
    <a href="/cats/<%= cat.id %>/destroy"> Delete</a>
  </p>
<% end %>
<a href="/cats/new">New cat!</a>
